    "mongodb": "^4.12.1",
    "nodemon": "^2.0.20",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.4",
